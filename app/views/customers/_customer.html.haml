.col-md-6
  .container.record
    .row
      .col-md-3
        %h3 #{customer.first_name} #{customer.last_name}
      .col-md-3.actions
        = link_to 'View', customer_path(id: customer.id), class: 'btn btn-primary'
        = link_to 'Edit', edit_customer_path(id: customer.id), class: 'btn btn-info'
        = link_to 'Delete', customer_path(id: customer.id), method: 'delete', class: 'btn btn-danger', data: {confirm: "Are you sure?"}
    .row
      .col-md-6
        Email: #{customer.email}
    .row
      .col-md-6
        Phone: #{customer.phone_number}
